<mah:MetroWindow
    x:Class="MsSqlToolBelt.Ui.View.Windows.EditServerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MsSqlToolBelt.Ui.View.Windows"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:windows="clr-namespace:MsSqlToolBelt.Ui.ViewModel.Windows"
    Title="Server"
    Width="400"
    Height="200"
    mah:DialogParticipation.Register="{Binding}"
    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
    Loaded="EditServerWindow_OnLoaded"
    TitleCharacterCasing="Normal"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.DataContext>
        <windows:EditServerWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="Server:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding SelectedServer.Name, UpdateSourceTrigger=PropertyChanged}">
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding ConnectCommand}" />
            </TextBox.InputBindings>
        </TextBox>
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Width="75"
            Command="{Binding ConnectCommand}"
            Content="Connect" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="Database:" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            IsEnabled="{Binding ButtonSelectedEnabled}"
            ItemsSource="{Binding DatabaseList}"
            SelectedItem="{Binding SelectedDatabase}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Auto connect:" />
        <CheckBox
            Grid.Row="2"
            Grid.Column="1"
            IsChecked="{Binding SelectedServer.AutoConnect}"
            IsEnabled="{Binding AutoConnectEnabled}" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Content="Name:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            mah:TextBoxHelper.Watermark="e.g. Production (optional)"
            Text="{Binding SelectedServer.Description}" />

        <Separator
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3" />

        <Label
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            Content="{Binding InfoMessage}"
            Foreground="Red" />

        <StackPanel
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            FlowDirection="RightToLeft"
            Orientation="Horizontal">
            <Button
                Width="75"
                Command="{Binding CloseCommand}"
                Content="Close" />
            <Button
                Width="75"
                Command="{Binding SetDataCommand}"
                Content="Ok" />
        </StackPanel>


    </Grid>
</mah:MetroWindow>
