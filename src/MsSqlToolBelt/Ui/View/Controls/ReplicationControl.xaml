<UserControl
    x:Class="MsSqlToolBelt.Ui.View.Controls.ReplicationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:controls="clr-namespace:MsSqlToolBelt.Ui.ViewModel.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:MsSqlToolBelt.Ui.View.Controls"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="RepControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mah:DialogParticipation.Register="{Binding}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <controls:ReplicationControlViewModel />
    </UserControl.DataContext>

    <Grid IsEnabled="{Binding ControlEnabled}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <!--  List  -->
        <Border Grid.Column="0" Style="{StaticResource BorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <mah:MetroHeader Grid.Row="0" Content="{Binding HeaderList}" />

                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Label Content="Type:" />
                    <ComboBox
                        Width="150"
                        ItemsSource="{Binding Publications}"
                        SelectedItem="{Binding SelectedPublication}" />
                </StackPanel>

                <Separator Grid.Row="1" />

                <DataGrid
                    Name="DataGridTables"
                    Grid.Row="2"
                    IsReadOnly="True"
                    ItemsSource="{Binding Tables}"
                    SelectedItem="{Binding SelectedTable}">
                    <DataGrid.CommandBindings>
                        <CommandBinding Command="Copy" Executed="DataGridTables_OnExecuted" />
                    </DataGrid.CommandBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Name}"
                            Header="Table" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Publications}"
                            Header="Publications" />
                        <DataGridCheckBoxColumn
                            Width="70"
                            Binding="{Binding HasReplicationFilter}"
                            Header="Filter" />
                    </DataGrid.Columns>
                </DataGrid>

                <Separator Grid.Row="3" />

                <TextBox
                    Grid.Row="4"
                    mah:TextBoxHelper.SelectAllOnFocus="True"
                    mah:TextBoxHelper.Watermark="Filter..."
                    Style="{StaticResource TextBoxFilter}"
                    Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding FilterListCommand}" />
                    </TextBox.InputBindings>
                </TextBox>

                <Separator Grid.Row="5" />

                <Button
                    Grid.Row="6"
                    Width="60"
                    HorizontalAlignment="Right"
                    Command="{Binding ReloadCommand}"
                    Content="Reload" />
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Style="{StaticResource VerticalSplitter}" />

        <!--  Information  -->
        <Grid Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="300" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource BorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1.5*" />
                        </Grid.ColumnDefinitions>

                        <mah:MetroHeader
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Content="Commands / Filter" />

                        <Separator
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3" />

                        <DataGrid
                            Name="DataGridRepArticles"
                            Grid.Row="2"
                            Grid.Column="0"
                            IsReadOnly="True"
                            ItemsSource="{Binding RepArticles}"
                            SelectedItem="{Binding SelectedRepArticle}">
                            <DataGrid.CommandBindings>
                                <CommandBinding Command="Copy" Executed="DateGridRepArticles_OnExecuted" />
                            </DataGrid.CommandBindings>
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Publication}"
                                    Header="Publication" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding DestinationTable}"
                                    Header="Destination" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <GridSplitter
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource VerticalSplitter}" />

                        <Grid Grid.Row="2" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="32" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Content="Insert cmd:" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                IsReadOnly="True"
                                Text="{Binding SelectedRepArticle.InsertCommand, FallbackValue='/'}" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Content="Update cmd:" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                IsReadOnly="True"
                                Text="{Binding SelectedRepArticle.InsertCommand, FallbackValue='/'}" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Content="Delete cmd:" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                IsReadOnly="True"
                                Text="{Binding SelectedRepArticle.InsertCommand, FallbackValue='/'}" />

                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                Content="Filter:" />

                            <avalonedit:TextEditor
                                Name="SqlEditor"
                                Grid.Row="3"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="3"
                                BorderBrush="Black"
                                BorderThickness="1"
                                FontFamily="Hack,Consolas"
                                FontSize="12"
                                IsReadOnly="True"
                                ShowLineNumbers="True" />

                        </Grid>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource BorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <mah:MetroHeader Grid.Row="0" Content="{Binding HeaderColumns}" />

                        <Separator Grid.Row="1" />

                        <DataGrid
                            Name="DataGridColumns"
                            Grid.Row="2"
                            IsReadOnly="True"
                            ItemsSource="{Binding Columns}">
                            <DataGrid.CommandBindings>
                                <CommandBinding Command="Copy" Executed="DataGridColumns_OnExecuted" />
                            </DataGrid.CommandBindings>
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding Order}"
                                    Header="Pos." />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Name}"
                                    Header="Name" />
                                <DataGridCheckBoxColumn
                                    Width="Auto"
                                    Binding="{Binding IsPrimaryKey}"
                                    Header="PK" />
                                <DataGridCheckBoxColumn
                                    Width="Auto"
                                    Binding="{Binding InIndex}"
                                    Header="Index" />
                                <DataGridCheckBoxColumn
                                    Width="Auto"
                                    Binding="{Binding IsIdentity}"
                                    Header="Identity" />
                                <DataGridCheckBoxColumn
                                    Width="Auto"
                                    Binding="{Binding IsNullable}"
                                    Header="Null" />
                                <DataGridCheckBoxColumn
                                    Width="Auto"
                                    Binding="{Binding IsReplicated}"
                                    Header="Replicated" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <Border Grid.Row="2" Style="{StaticResource BorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <mah:MetroHeader Grid.Row="0" Content="{Binding HeaderIndex}" />

                        <Separator Grid.Row="1" />

                        <DataGrid
                            Name="DataGridIndexes"
                            Grid.Row="2"
                            IsReadOnly="True"
                            ItemsSource="{Binding Indexes}">
                            <DataGrid.CommandBindings>
                                <CommandBinding Command="Copy" Executed="DataGridIndexes_OnExecuted" />
                            </DataGrid.CommandBindings>
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Name}"
                                    Header="Name" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Columns}"
                                    Header="Columns" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

            </Grid>
        </Grid>

